<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/txtId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="#8725B8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1/1/99"
            android:textColor="#B8253B"/>

        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0000"
            android:textColor="#B82556"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:paddingLeft="100dp">

        <ImageView
            android:id="@+id/imvEdit"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_action_edit" />

        <ImageView
            android:id="@+id/imvCall"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_action_call" />

        <ImageView
            android:id="@+id/imvMess"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_action_message" />
    </LinearLayout>
</LinearLayout>